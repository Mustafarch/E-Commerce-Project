@model WebTicket.Entities.Category

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (ViewBag.Durum != null)
{
    <span style="background-color:red;color:white;padding:10px">@ViewBag.Durum</span>

}
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-2">Kategori İsmi</div>
        <div class="col-md-10">@Html.TextBoxFor(x=>x.CategoryName, new{@class="form-control"})</div>
    </div>
    <br />
   
    <div class="row">
        <div class="col-md-12"><input type="submit" value="Düzenle" class="btn btn-success" /></div>
    </div>
}