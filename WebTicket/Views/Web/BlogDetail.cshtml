@model WebTicket.Entities.Blog

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
	<a href="@Url.Action("Index","Web")" class="stext-109 cl8 hov-cl1 trans-04">
		Anasayfa
		<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
	</a>

	<a href="@Url.Action("Blog","Web")" class="stext-109 cl8 hov-cl1 trans-04">
		Blog
		<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
	</a>

	<span class="stext-109 cl4">
		@Model.Title
	</span>
</div>

<section class="bg0 p-t-52 p-b-20">
	<div class="container">
<div class="row">
	<div class="col-md-8 col-lg-9 p-b-80">
		<div class="p-r-45 p-r-0-lg">
			<!--  -->
			<div class="wrap-pic-w how-pos5-parent">
				<img src="@Model.Picture" height="550" width="200" alt="IMG-BLOG">

				<div class="flex-col-c-m size-123 bg9 how-pos5">
					<span class="ltext-107 cl2 txt-center">
						@Model.History.Day
					</span>

					<span class="stext-109 cl3 txt-center">
						@Model.History.ToString("MMMM"), @Model.History.Year
					</span>
				</div>
			</div>

			<div class="p-t-32">
				<span class="flex-w flex-m stext-111 cl2 p-b-19">
					<span>
						<span class="cl4">Yazar</span> @Model.Author
						<span class="cl12 m-l-4 m-r-6">|</span>
					</span>

					<span>
						@Model.History.Day, @Model.History.ToString("MMMM"), @Model.History.Year
						<span class="cl12 m-l-4 m-r-6">|</span>
					</span>

					<span>
						Yaşam
						<span class="cl12 m-l-4 m-r-6">|</span>
					</span>

					<span>
								Yorum (@ViewBag.Review.Count)
					</span>
				</span>

				<h4 class="ltext-109 cl2 p-b-28">
					@Model.Title
				</h4>

				<p class="stext-117 cl6 p-b-26">
					@Model.Contents
				</p>

				
			</div>

			

			<!--  -->
			<div class="p-t-40">
						<div class="bor10 m-t-50 p-t-43 p-b-40">
							<!-- Tab01 -->
							<div class="tab01">
								<!-- Nav tabs -->
								<ul class="nav nav-tabs" role="tablist">
								

									

									<li class="nav-item p-b-10">
										<a class="nav-link active" data-toggle="tab" href="#reviews" role="tab" aria-expanded="true">Yorum (@ViewBag.Review.Count)</a>
									</li>
								</ul>

								<!-- Tab panes -->
								<div class="tab-content p-t-43">
									<!-- - -->
								

									<!-- - -->
						

									<!-- - -->
									
										<div class="row">
											<div class="col-sm-10 col-md-8 col-lg-6 m-lr-auto">
												<div class="p-b-30 m-lr-15-sm">
													<!-- Review -->

													@foreach (var item in ViewBag.Review)
													{
														<div class="flex-w flex-t p-b-68">
														<div class="wrap-pic-s size-109 bor0 of-hidden m-r-18 m-t-6">
															<img src="@item.Picture" alt="AVATAR">
														</div>

														<div class="size-207">
															<div class="flex-w flex-sb-m p-b-17">
																<span class="mtext-107 cl2 p-r-20">
																	@item.NameSurname
																</span>
																<span class="date">@item.Date.ToLongDateString()</span>

																
															</div>

															<p class="stext-102 cl6">
																@item.Review
															</p>
														</div>
													</div>

													}

													



													<!-- Add review -->
													@*<form class="w-full">*@

														
														<h5 class="mtext-108 cl2 p-b-7">
															Yorum Ekle
														</h5>

														<p class="stext-102 cl6">
														E-posta hesabınız yayımlanmayacak.

														</p>

												@using (Html.BeginForm("ReviewAdd", "Web"))
												{

														<div class="row p-b-25">
															<input type="hidden" name="BlogID" value="@Model.ID"/>
															<div class="col-12 p-b-5">
																<label class="stext-102 cl3" for="review">Yorum</label>
															<textarea class="size-110 bor8 stext-102 cl2 p-lr-20 p-tb-10" name="Review" required></textarea>
															</div>

															<div class="col-sm-6 p-b-5">
																<label class="stext-102 cl3" for="name">Ad Soyad</label>
															<input class="size-111 bor8 stext-102 cl2 p-lr-20" type="text" name="NameSurname" required>
															</div>

															<div class="col-sm-6 p-b-5">
																<label class="stext-102 cl3" for="email">Mail</label>
															<input class="size-111 bor8 stext-102 cl2 p-lr-20" type="text" name="Mail" required>
															</div>
														</div>
													<div class="col-sm-6 p-b-5">
														<label class="stext-102 cl3" for="name">Resim Url.</label>
														<input class="size-111 bor8 stext-102 cl2 p-lr-20" type="text" name="Picture" required>
													</div>

														<button class="flex-c-m stext-101 cl0 size-112 bg7 bor11 hov-btn3 p-lr-15 trans-04 m-b-10">
															Gönder
														</button>


														}
													@*</form>*@





												</div>
											</div>
										</div>
									
								</div>
							</div>
						</div>
			</div>
		</div>
	</div>

	<div class="col-md-4 col-lg-3 p-b-80">
		<div class="side-menu">
			

			<div class="p-t-55">
				<h4 class="mtext-112 cl2 p-b-33">
					Kategoriler
				</h4>

				<ul>
					@foreach (var item in ViewBag.ProductC)
			             	{
				                	if (ViewBag.ProductC !=null)
				            	{
							<li class="bor18">

										<a href="@Url.Action("CategoryFiltre", "Web", new {kategori = item.CategoryID = 1 })" class="dis-block stext-115 cl6 hov-cl1 trans-04 p-tb-8 p-lr-4">
								
									Bayan
								</a>
							</li>
								}

							}

							@foreach (var item in ViewBag.ProductC)
			             	{
				                	if (ViewBag.ProductC !=null)
				            	{
							<li class="bor18">
										<a href="@Url.Action("CategoryFiltre", "Web", new {kategori = item.CategoryID = 2 })" class="dis-block stext-115 cl6 hov-cl1 trans-04 p-tb-8 p-lr-4">
									Bay
								</a>
							</li>
								}

							}

							@foreach (var item in ViewBag.ProductC)
			             	{
				                	if (ViewBag.ProductC !=null)
				            	{
							<li class="bor18">
										<a href="@Url.Action("CategoryFiltre", "Web", new {kategori = item.CategoryID = 3 })" class="dis-block stext-115 cl6 hov-cl1 trans-04 p-tb-8 p-lr-4">
									Aksesuar
								</a>
							</li>
								}

							}
				</ul>
			</div>

			<div class="p-t-65">
				<h4 class="mtext-112 cl2 p-b-33">
					Özel Ürünler
				</h4>

						@foreach (var item in ViewBag.Product3)
						{
							@if (ViewBag.Product3 != null)
							{
								<ul>
									<li class="flex-w flex-t p-b-30">
										<a href="@Url.Action("ProductDet","Web", new{id=item.ID})" class="wrao-pic-w size-214 hov-ovelay1 m-r-20">
											<img src="@item.ProductPicture" height="140" alt="PRODUCT">
										</a>

										<div class="size-215 flex-col-t p-t-8">
											<a href="@Url.Action("ProductDet","Web", new{id=item.ID})" class="stext-116 cl8 hov-cl1 trans-04">
												@item.ProductName
											</a>

											<span class="stext-116 cl6 p-t-20">
												@item.ProductPrice TL
											</span>
										</div>
									</li>

								</ul>
							}


						}
			</div>

		</div>
	</div>
</div>
	</div>
</section>