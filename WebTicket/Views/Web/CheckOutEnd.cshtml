@model List<WebTicket.Entities.Cart>

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
     
    @using (Html.BeginForm("CheckOutEnd","Web"))
    {
      <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Sepet Özeti</span>
            <span class="badge badge-secondary badge-pill">@ViewBag.CartList.Count</span>
          </h4>



          <ul class="list-group mb-3">
@foreach (var item in Model)
{
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">@item.ProductName x @item.ProductQuantity</h6>
                                
                            </div>
                            <span class="text-muted">@item.ProductTotal ₺</span>
                        </li>

                    }

                        <li class="list-group-item d-flex justify-content-between">
                            <span>Toplam (TL)</span>
                            <strong>@Model.Sum(x=>x.ProductTotal) ₺</strong>
                        </li>
                   

          </ul>

      
        </div>
        <div class="col-md-8 order-md-1">
          <h4 class="mb-3">Adres Bilgileri</h4>
          
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="firstName">Ad</label>
                <input type="text" name="Name" class="form-control" id="firstName" placeholder="" value="" required="">
                <div class="invalid-feedback">
                            Geçerli bir ad gerekli.
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="lastName">Soy Ad</label>
                        <input type="text" name="Surname" class="form-control" id="lastName" placeholder="" value="" required="">
                <div class="invalid-feedback">

                            Geçerli bir soyadı gereklidir.
                </div>
              </div>
            </div>


            <div class="mb-3">
              <label for="email">Email <span class="text-muted"></span></label>
                    <input type="email" name="Mail" class="form-control" id="email" placeholder="Sen@örnek.com">
              <div class="invalid-feedback">

                        Lütfen gönderi güncellemeleri için geçerli bir e-posta adresi girin.
              </div>
            </div>

            <div class="mb-3">
              <label for="address">Adres</label>
                    <input type="text" name="Adres" class="form-control" id="address" placeholder="Adres" required="">
              <div class="invalid-feedback">

                        Lütfen teslimat adresinizi girin.
              </div>
            </div>

                <div class="mb-3">
                    <label for="address">Telefon</label>
                    <input type="text" name="Phone" class="form-control" id="address" placeholder="05002003040" required="">
                    <div class="invalid-feedback">

                        Lütfen telefon numaranızı giriniz.
                    </div>
                </div>
           

           
            <hr class="mb-4">
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id="same-address">
              <label class="custom-control-label" for="same-address">Teslimat adresi fatura adresim ile aynı</label>
            </div>
           
            <hr class="mb-4">

    <a@* href="@Url.Action("Onay","Web")"*@> <button class="btn btn-primary btn-lg btn-block" type="submit">Siparişi Tamamla</button></a>
           
         
        </div>
      </div>
      }
      <footer class="my-5 pt-5 text-muted text-center text-small">
     
      </footer>
    </div>