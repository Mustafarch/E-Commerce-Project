@model List<WebTicket.Entities.Cart>

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
	<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
		<a href="@Url.Action("Index","Web")" class="stext-109 cl8 hov-cl1 trans-04">
			Anasayfa
			<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
		</a>

		<span class="stext-109 cl4">
			Sepet
		</span>
	</div>
</div>
<br />
<br />

<div class="container">
	<div class="row">
@if (Model.Count > 0)
{
	
			<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
				<div class="m-l-25 m-r--38 m-lr-0-xl">

					<div class="wrap-table-shopping-cart">
						<table class="table-shopping-cart">
							<tbody>
								<tr class="table_head">
									<th class="column-1">Ürun</th>
									<th class="column-2"></th>
							
									<th class="column-3">Fiyat</th>
									
									
									<th class="column-4">Adet</th>
									<th class="column-5">Toplam</th>
								</tr>


								@foreach (var item in Model)
								{
								<tr class="table_row">
									<td class="column-1">

										<a href="@Url.Action("CartDelete","Web", new{id=item.ID})">
											<div class="how-itemcart1">
												<img src="@item.ProductPicture" alt="IMG">
											</div>
										</a>
										
									</td>
									<td class="column-2">@item.ProductName</td>
									@*<td class="column-2">@item.ProductSize</td>*@
									<td class="column-3">@item.ProductPrice ₺</td>
									
								
									@*<td class="column-4">
										@item.ProductQuantity	
									</td>*@


									@*	<td class="qua-col">
											<div class="quantity">
												@Html.ActionLink("-", "Decrease", new { id = item.ID }, new { @class = "btn btn-warning" })
												@Html.TextBoxFor(x => item.ProductQuantity, new { @class = "form-control"})
												@Html.ActionLink("+", "Increase", new { id = item.ID }, new { @class = "btn btn-warning" })
											</div>
										</td>*@
										<td class="column-4">
											<div class="wrap-num-product flex-w m-l-auto m-r-0">

												<a href="@Url.ActionLink("Decrease","Web", new { id = item.ID })">
													<div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
														<i class="fs-16 zmdi zmdi-minus"></i>
													</div>
												</a>
												


												<input class="mtext-104 cl3 txt-center num-product" type="number" name="num-product1" value="@item.ProductQuantity">

												<a href="@Url.ActionLink("Increase","Web", new { id = item.ID })">
													<div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
														<i class="fs-16 zmdi zmdi-plus"></i>
													</div>
												</a>
												


											</div>
										</td>



									<td class="column-5">@item.ProductTotal ₺</td>
								</tr>
							}
								
									


							</tbody>
						</table>
					</div>

					<div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
					
					<div class="size-208">
						<span class="mtext-101 cl2">
							Toplam: @Model.Sum(x=>x.ProductTotal) ₺
						</span>
					</div>
					
						<a href="@Url.Action("CheckOutEnd","Web")">
							<button class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
								Satın Al
							</button>
						</a>
					
					
					
					</div>


				</div>
			</div>

			
							<div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
				<div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
				
					<h4 class="mtext-109 cl2 p-b-30">
						Bilgilendirme
					</h4>

					<div class="flex-w flex-t bor12 p-b-13">

						<div class="size-208">
							<span class="stext-110 cl2">
								Kargo Ücreti:
							</span>
						</div>

						<div class="size-209">
							<span class="mtext-110 cl2">
							Ücretsiz
							</span>
						</div>
					</div>

					<div class="flex-w flex-t bor12 p-t-15 p-b-30">
						<div class="size-208 w-full-ssm">
							<span class="stext-110 cl2">
								Kargo:
							</span>
						</div>

					<div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
						<p class="stext-111 cl6 p-t-2">
							- İstanbul dışı siparişlerin gönderimi  Aras Kargo ile yapılmaktadır.
							
							
						</p>
						<p class="stext-111 cl6 p-t-2">
							- İstanbul dışı siparişinizi aynı gün kargoya teslim etmeye gayret ediyoruz. Olası gecikmelerde siparişinizi en geç ertesi iş günü kargoya veriyoruz.
						</p>
						<p class="stext-111 cl6 p-t-2">
							- Teslimat saatlerimiz 09:00-18:00 arasıdır.
						</p>
					</div>
				</div>

				</div>
			</div>
		}
		else
		{

			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div class="alert alert-warning" role="alert">
							Sepetinizde ürün bulunmamaktadır. <a href="@Url.Action("ProductL","Web")" class="alert-link">Şuradan alışverişe devam et, </a> hemen sepetine ürün ekle!
						</div>
					</div>
				</div>
			</div>
			
		}

		</div>
	</div>
<br />
<br />
<br />
<br />