<!-- Product -->
<section class="sec-product bg0 p-t-100 p-b-50">
	<div class="container">
		<div class="p-b-32">
			<h3 class="ltext-105 cl5 txt-center respon1">
				Mağazaya Genel Bakış
			</h3>
		</div>

		<!-- Tab01 -->
		<div class="tab01">
			<!-- Nav tabs -->
			<ul class="nav nav-tabs" role="tablist">
				<li class="nav-item p-b-10">
					<a class="nav-link active" data-toggle="tab" href="#best-seller" role="tab">Öne Çıkanlar</a>
				</li>

			</ul>

			<!-- Tab panes -->
			<div class="tab-content p-t-50">
				<!-- - -->
				<div class="tab-pane fade show active" id="best-seller" role="tabpanel">
					<!-- Slide2 -->
					<div class="wrap-slick2">
						<div class="slick2">
						

							
							
							@foreach (var item in ViewBag.Product)
							{

								@if (ViewBag.Product !=null)
								{
									<div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
										<!-- Block2 -->
										<div class="block2">
											<div class="block2-pic hov-img0">
												<img src="@item.ProductPicture" height="390" alt="IMG-PRODUCT">

												<a href="@Url.Action("ProductDet","Web", new{id=item.ID})" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 ">
													Ayrıntılı Gör
												</a>
											</div>

											<div class="block2-txt flex-w flex-t p-t-14">
												<div class="block2-txt-child1 flex-col-l ">
													<a href="@Url.Action("ProductDet","Web", new{id=item.ID})" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
														@item.ProductName
													</a>

													<span class="stext-105 cl3">
														@item.ProductPrice TL
													</span>
												</div>

												
											</div>
										</div>

									</div>
								}

								
								
							}	
								
				             
						</div>
					</div>
				</div>

				<!-- - -->
				<div class="tab-pane fade" id="featured" role="tabpanel">
					<!-- Slide2 -->
					<div class="wrap-slick2">
						<div class="slick2">
							

						</div>
					</div>
				</div>

				<!-- - -->
				<div class="tab-pane fade" id="sale" role="tabpanel">
					<!-- Slide2 -->
					<div class="wrap-slick2">
						<div class="slick2">
							<div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
								<!-- Block2 -->
								
								<!-- Block2 -->
								<div class="block2">
									<div class="block2-pic hov-img0">
										<img src="~/Web/images/product-16.jpg" alt="IMG-PRODUCT">

										<a href="#" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
											Quick View
										</a>
									</div>

									<div class="block2-txt flex-w flex-t p-t-14">
										<div class="block2-txt-child1 flex-col-l ">
											<a href="product-detail.html" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
												Square Neck Back
											</a>

											<span class="stext-105 cl3">
												$29.64
											</span>
										</div>

										<div class="block2-txt-child2 flex-r p-t-3">
											<a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
												<img class="icon-heart1 dis-block trans-04" src="~/Web/images/icons/icon-heart-01.png" alt="ICON">
												<img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/Web/images/icons/icon-heart-02.png" alt="ICON">
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


<!-- Blog -->
<section class="sec-blog bg0 p-t-60 p-b-90">
	<div class="container">
		<div class="p-b-66">
			<h3 class="ltext-105 cl5 txt-center respon1">
				Bloglarımız
			</h3>
		</div>


		<div class="row">
			@foreach (var item in ViewBag.Blogs)
			{

				@if (ViewBag.Blogs != null)
				{
					<div class="col-sm-6 col-md-4 p-b-40">
						<div class="blog-item">
							<div class="hov-img0">
								<a href="@Url.Action("BlogDetail","Web", new{id=item.ID})">
									<img src="@item.Picture" width="210" height="280" alt="IMG-BLOG">
								</a>
							</div>

							<div class="p-t-15">
								<div class="stext-107 flex-w p-b-14">
									<span class="m-r-3">
										<span class="cl4">
											Yazar
										</span>

										<span class="cl5">
											@item.Author
										</span>
									</span>

									<span>
										<span class="cl4">
											Tarih
										</span>

										<span class="cl5">
											@item.History
										</span>
									</span>
								</div>

								<h4 class="p-b-12">
									<a href="@Url.Action("BlogDetail","Web", new{id=item.ID})" class="mtext-101 cl2 hov-cl1 trans-04">
										@item.Title
									</a>
								</h4>

								<p class="stext-108 cl6">
									@item.Contents.Substring(0,60)<span>...</span>
								</p>
							</div>
						</div>
					</div>
				}
				

			}

		</div>
	</div>
</section>


